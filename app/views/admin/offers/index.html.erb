<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Item</th>
      <th>Offer On</th>
      <th>Is free</th>
      <th>Discount percent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.item.name %></td>
        <td><%= offer.discounted_item.name %></td>
        <td><%= offer.is_free %></td>
        <td><%= offer.discount_percent %></td>
        <td><%= link_to 'Show', admin_offer_path(offer), class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_admin_offer_path(offer), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', admin_offer_path(offer), method: :delete,
                  data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Offer', new_admin_offer_path, class: 'btn btn-success' %>
