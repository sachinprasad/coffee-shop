<p id="notice"><%= notice %></p>

<h1>Admin Items</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Tax rate</th>
      <th scope="col">Created By</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.tax_rate %></td>
        <td scope="row"><%= item.user.full_name %></td>
        <td><%= link_to 'Show', admin_item_path(item), class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_admin_item_path(item), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Item', new_admin_item_path, class: "btn btn-success" %>
